#include<iostream>


//Ejercicio 1

int casilla(int potencia)
{
    int pot = 1;
    for (int i = 0; i < potencia; i++)
        pot *= 2;
    return pot;
}


int matriz[50][50];

void opera(int fil, int col, int size)
{
    if (fil < size){
        if (col < size){

            if (col < size)
                matriz[col][fil] = casilla(col);
            else
                matriz[col][fil] = casilla(ren);

            opera(fil,(col+1),tam);

        }else{
            opera((ren+1),0,tam);
        }
    }
}


//Ejercicio 2

int n;
int matriz[50][50];
bool casilla = false;

void movimiento(int a, int b)
{

    if((a<n && b<n) && (a>=0 && b>=0)) && (matriz[a][b] != -1 && casilla == false)
    {
        if(a == n-1 && b == n-1)
        {
            casilla = true;
            return casilla;
        }else{
        movimiento(a+1,b);
        movimiento(a,b+1);
        movimiento(a-1,b);
        movimiento(a,b-1);
    }
}

